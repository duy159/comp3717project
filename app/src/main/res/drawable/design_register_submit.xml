<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid
                android:color="#ff54a9d8"/>
            <corners
                android:radius="15dp"/>
            <size
                android:height="40dp"
                android:width="300dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid
                android:color="#FF255D94"/>
            <corners
                android:radius="15dp"/>
            <size
                android:height="40dp"
                android:width="300dp"/>
        </shape>
    </item>

</selector>