<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Set Day for Workout Request:"
        android:id="@+id/textView3"
        android:layout_marginTop="60dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff54a9d8" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/dayInput"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Set StartTime (Format:2400)"
        android:id="@+id/textView5"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff54a9d8" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/startTimeInput"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Set EndTime (Format:2400)"
        android:id="@+id/textView7"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#ff54a9d8" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/endTimeInput"
        android:layout_gravity="center_horizontal" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Schedule"
        android:id="@+id/setScheduleBtn"
        android:layout_gravity="center_horizontal"
        android:onClick="editSchedule"
        android:nestedScrollingEnabled="false"
        android:background="@drawable/design_register_submit"
        android:textColor="#FFFFFF"
        android:singleLine="true"
        android:layout_marginTop="150dp" />

</LinearLayout>